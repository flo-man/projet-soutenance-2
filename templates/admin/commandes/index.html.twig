{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commandes</h1>

        <table class="table">
            <tr>
                <th>ID de commande</th>
                <th>Client</th>
                <th>Produit(s)</th>
                <th>Facture </th>
            </tr>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.client.pseudo }}</td>
                    <td> {% if commande.produits | length > 0 %}
                        {% for ligne in commande.produits %}
                            {{ ligne.nom }} |
                        {% endfor %}
                    {% endif %} </td>
                    <td>{{ commande.facture }} â‚¬</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
