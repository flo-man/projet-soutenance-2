{% extends 'base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Contact</h1>
        <div class="row">
            <div class="col-lg-6">
                <form>
                    <div class="form-group">
                        <label for="email">Votre Email</label>
                        <input type="text" class="form-control" id="email" placeholder="exemple@mail.fr">
                    </div>
                    <div class="form-group">
                        <label for="objet">Objet</label>
                        <input type="text" class="form-control" id="objet">
                    </div>
                    <div class="form-group">
                        <label for="message">Votre message</label>
                        <textarea type="text" class="form-control" id="message" placeholder="Votre Message">

                        </textarea>
                    </div>
                    <button class="btn btn-primary mb-3">Envoyer</button>
                </form>
            </div>
            <img src="{{ asset('img/bebe_telephonejpg.jpg') }}" alt="bebe_tel" style="width: 50%">
        </div>
    </div>
{% endblock %}


