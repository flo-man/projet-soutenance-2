{% extends 'base.html.twig' %}

{% block body %}
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Teko:400,700" rel="stylesheet">

    <style>
        .content-header{
            font-family: 'Oleo Script', cursive;
            color:#fcc500;
            font-size: 45px;
        }

        .section-content{
            text-align: center;

        }
        #contact{
            width: 100%;
            margin: 100px;
            font-family: 'Teko', sans-serif;
            padding-top: 10px;
            height: 460px;
            background: #3a6186;
            background: -webkit-linear-gradient(to left, #3a6186 , #89253e);
            background: rgb(0, 127, 255);
            color : #fff;
        }
        .contact-section{
            padding-top: 10px;
        }
        .contact-section .col-md-6{
            width: 50%;
        }

        .form-line{
            border-right: 1px solid #B29999;
        }

        .form-group{
            margin-top: 1px;
        }
        label{
            font-size: 1.3em;
            line-height: 1em;
            font-weight: normal;
        }
        .form-control{
            font-size: 1.3em;
            color: #080808;
        }
        textarea.form-control {
            height: 75px;
        }

        .submit{
            font-size: 1.1em;
            float: right;
            width: 75px;
            background-color: transparent;
            color: #fff;
        }
    </style>

<section id="contact">
        <div class="section-content">
            <h1 class="section-header">contacter nous <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> par ici</span></h1>
        </div>
        <div class="contact-section">
            <div class="container">
                <form style="display: flex">
                    <div class="col-md-6 form-line">
                        <div class="form-group">
                            <label for="exampleInputUsername">Votre nom</label>
                            <input type="text" class="form-control" id="" placeholder=" Nom">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail">Adresse email</label>
                            <input type="email" class="form-control" id="exampleInputEmail" placeholder=" adresse email">
                        </div>
                        <div class="form-group">
                            <label for="telephone">Numéro tél.</label>
                            <input type="tel" class="form-control" id="telephone" placeholder=" Numéro téléphone">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for ="description"> Message</label>
                            <textarea  class="form-control" id="description" placeholder="Votre Message"></textarea>
                        </div>

                        <div>
                            <button type="button" class="btn btn-default submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Envoyer Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</section>
{% endblock %}


