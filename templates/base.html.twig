        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <style>
                .navbar-custom {
                    min-height: 10vh;
                    background: darkslateblue;
                }
                ul li {
                    min-width: 15vh;
                    text-align: center;
                    line-height: 8vh;
                }
                ul li:nth-child(1) {
                    background-color: #e7c50a;
                    color: #000;
                }
                ul li:nth-child(2), .dropdown-menu-2 {
                    background-color: #e70a9c;
                    color: #fff;
                }
                ul li:nth-child(3) {
